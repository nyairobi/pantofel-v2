{
    "ts-node": {
        "transpileOnly": false,
        "files": true,
        "compilerOptions": { }
    },

    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "lib": [ "es2021", "dom" ],
        "rootDir": "./src",
        "outDir": "./build",
        "moduleResolution": "node",
        "strict": true,
        "declaration": false,
        "sourceMap": true,
        "inlineSources": true,
        "types": [ "node" ],
        "stripInternal": true,
        "incremental": true,
        "skipLibCheck": true,
        "importsNotUsedAsValues": "error",
        "inlineSourceMap": false,
        "noEmit": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    }
}